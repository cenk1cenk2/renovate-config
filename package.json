{
  "name": "@cenk1cenk2/renovate-config",
  "version": "1.0.0-development",
  "description": "Self-hosted instance of Renovate to update GitHub Actions workflows.",
  "author": "Cenk Kilic, Jeroen de Bruijn, Scale Leap",
  "license": "GPL-3.0-or-later",
  "repository": "https://github.com/cenk1cenk2/renovate",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:start": "NODE_ENV=develop yarn start",
    "lint": "prettier --write ./ && eslint --ext .ts,.js,.tsx,.jsx --fix ./",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx ./"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./src/*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "chalk": "4.1.0",
    "config": "3.3.2",
    "figures": "3.2.0",
    "fs-extra": "9.0.1",
    "pkg-dir": "5.0.0",
    "renovate": "23.56.0",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.3",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.2.4",
    "@cenk1cenk2/eslint-config": "^0.4.18",
    "@types/config": "^0.0.36",
    "@types/figures": "^3.0.1",
    "@types/fs-extra": "^9.0.2",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "base": {
      "extends": [
        "config:base",
        ":masterIssue",
        ":prHourlyLimitNone",
        ":prConcurrentLimitNone"
      ],
      "timezone": "Europe/Vienna",
      "semanticCommits": true,
      "assignees": [
        "cenk1cenk2"
      ],
      "labels": [
        "renovate"
      ],
      "rangeStrategy": "bump",
      "major": {
        "stabilityDays": 3
      },
      "prCreation": "immediate"
    },
    "branchBeta": {
      "baseBranches": [
        "beta"
      ]
    },
    "branchDevelop": {
      "baseBranches": [
        "develop"
      ]
    },
    "default": {
      "extends": [
        "@cenk1cenk2:base",
        "@cenk1cenk2:lockFile",
        "@cenk1cenk2:noTests",
        "@cenk1cenk2:groupMinorDependencies",
        "@cenk1cenk2:groupDevDependencies",
        "@cenk1cenk2:groupPeerDependencies",
        "@cenk1cenk2:slowring",
        "@cenk1cenk2:fastring"
      ]
    },
    "fastring": {
      "packageRules": [
        {
          "packagePatterns": [
            "^@cenk1cenk2/",
            "listr2"
          ],
          "groupName": "all fast ring minor dependencies",
          "groupSlug": "fast-ring",
          "depTypeList": [
            "dependencies"
          ],
          "updateTypes": [
            "minor",
            "patch",
            "pin",
            "digest"
          ],
          "rangeStrategy": "bump",
          "labels": [
            "renovate",
            "minor",
            "automerge"
          ],
          "automerge": true,
          "schedule": [
            "at any time"
          ]
        },
        {
          "packagePatterns": [
            "^@cenk1cenk2/",
            "listr2"
          ],
          "groupName": "all fast ring dev dependencies",
          "groupSlug": "fast-ring-dev",
          "depTypeList": [
            "devDependencies"
          ],
          "rangeStrategy": "bump",
          "commitMessageSuffix": "[skip ci]",
          "labels": [
            "renovate",
            "dev-deps",
            "automerge"
          ],
          "automerge": true,
          "schedule": [
            "at any time"
          ]
        },
        {
          "packagePatterns": [
            "^@cenk1cenk2/",
            "listr2"
          ],
          "groupName": "all fast ring peer dependencies",
          "groupSlug": "fast-ring-peer",
          "depTypeList": [
            "peerDependencies"
          ],
          "rangeStrategy": "widen",
          "commitMessageSuffix": "[skip ci]",
          "labels": [
            "renovate",
            "peer-deps",
            "automerge"
          ],
          "automerge": true,
          "schedule": [
            "at any time"
          ]
        }
      ]
    },
    "groupDevDependencies": {
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "groupName": "all development dependency updates",
          "groupSlug": "all-dev",
          "depTypeList": [
            "devDependencies"
          ],
          "rangeStrategy": "bump",
          "commitMessageSuffix": "[skip ci]",
          "labels": [
            "renovate",
            "dev-deps",
            "automerge"
          ],
          "automerge": true,
          "schedule": [
            "at any time"
          ]
        }
      ]
    },
    "groupMinorDependencies": {
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "groupName": "all minor dependency updates",
          "groupSlug": "all",
          "depTypeList": [
            "dependencies"
          ],
          "updateTypes": [
            "minor",
            "patch",
            "pin",
            "digest"
          ],
          "rangeStrategy": "bump",
          "labels": [
            "renovate",
            "minor",
            "automerge"
          ],
          "automerge": true,
          "schedule": [
            "before 1am"
          ]
        }
      ]
    },
    "groupPeerDependencies": {
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "groupName": "all peer dependency updates",
          "groupSlug": "all-peer",
          "depTypeList": [
            "peerDependencies"
          ],
          "rangeStrategy": "widen",
          "commitMessageSuffix": "[skip ci]",
          "labels": [
            "renovate",
            "peer-deps",
            "automerge"
          ],
          "automerge": true,
          "schedule": [
            "at any time"
          ]
        }
      ]
    },
    "lockFile": {
      "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "commitMessageSuffix": "[skip ci]",
        "labels": [
          "renovate",
          "lock"
        ],
        "schedule": [
          "before 1am"
        ]
      }
    },
    "noTests": {
      "requiredStatusChecks": null
    },
    "slowring": {
      "packageRules": [
        {
          "packagePatterns": [
            "^@typescript-eslint/",
            "jest",
            "@types/jest",
            "^@types/node$",
            "^eslint$",
            "^husky$",
            "^prettier$",
            "^lint-staged$",
            "^cz-conventional-changelog$"
          ],
          "groupName": "all slow ring @weekly",
          "groupSlug": "slow-ring-weekly",
          "schedule": [
            "before 1am on Monday"
          ]
        },
        {
          "packageNames": [
            "node"
          ],
          "enabled": false
        }
      ]
    }
  }
}