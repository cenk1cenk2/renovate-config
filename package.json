{
  "name": "@cenk1cenk2/renovate-config",
  "version": "2.3.148",
  "description": "Renovate configuration generator for repositories.",
  "author": "Cenk Kilic",
  "license": "GPL-3.0-or-later",
  "repository": "https://gitlab.kilic.dev/renovate/renovate-config",
  "type": "module",
  "bin": {
    "renovate-config-generator": "./bin/run.js"
  },
  "files": [
    "/config",
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "dev": "./bin/dev.js",
    "start": "./bin/run.js",
    "build": "tsup-node",
    "dev:start": "tsup-node --watch",
    "format": "prettier --log-level warn --write ./ && eslint --fix ./src",
    "lint": "eslint ./src",
    "manifest": "oclif manifest"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --log-level warn --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --log-level warn --write"
    ]
  },
  "oclif": {
    "bin": "renovate-config-generator",
    "dirname": "renovate-config-generator",
    "commands": "./dist/commands",
    "plugins": [],
    "hooks": {},
    "topicSeparator": " ",
    "default": "run"
  },
  "dependencies": {
    "@cenk1cenk2/oclif-common": "^6.3.29",
    "@listr2/manager": "^2.0.17",
    "@oclif/core": "^4.5.1",
    "fs-extra": "^11.3.0",
    "listr2": "^8.3.3",
    "renovate": "^39.264.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^2.0.2",
    "@cenk1cenk2/eslint-config": "^3.1.57",
    "@swc/core": "^1.13.1",
    "@types/config": "^3.3.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.16.5",
    "eslint": "9.31.0",
    "execa": "^9.6.0",
    "globby": "^14.1.0",
    "lint-staged": "^16.1.2",
    "oclif": "^4.22.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-replace-paths": "^0.0.14",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
