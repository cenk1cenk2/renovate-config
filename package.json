{
  "name": "@cenk1cenk2/renovate-config",
  "version": "2.2.22",
  "description": "Renovate configuration generator for repositories.",
  "author": "Cenk Kilic, Scale Leap",
  "license": "GPL-3.0-or-later",
  "repository": "https://gitlab.kilic.dev/renovate/renovate-config",
  "scripts": {
    "build": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:start": "NODE_ENV=develop yarn build",
    "lint": "prettier --loglevel warn --write ./ && eslint --ext .ts,.js,.tsx,.jsx --fix ./",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx ./"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@cenk1cenk2/boilerplate-oclif": "^1.10.6",
    "config": "^3.3.8",
    "fs-extra": "^9",
    "renovate": "^32.238.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.5.4",
    "@cenk1cenk2/eslint-config": "^2.5.31",
    "@types/config": "^3.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.24",
    "eslint": "^8.25.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "base": {
      "enabledManagers": [
        "npm",
        "gomod"
      ],
      "extends": [
        "config:base",
        ":masterIssue",
        ":prHourlyLimitNone",
        ":prConcurrentLimitNone"
      ],
      "timezone": "Europe/Vienna",
      "semanticCommits": "enabled",
      "assignees": [
        "cenk1cenk2"
      ],
      "labels": [
        "renovate"
      ],
      "rangeStrategy": "bump",
      "major": {
        "stabilityDays": 3
      },
      "prCreation": "immediate",
      "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
      ]
    },
    "default": {
      "extends": [
        "@cenk1cenk2:base",
        "@cenk1cenk2:lockFile",
        "@cenk1cenk2:noTests",
        "@cenk1cenk2:groupMinorDependencies",
        "@cenk1cenk2:groupDevDependencies",
        "@cenk1cenk2:groupPeerDependencies",
        "@cenk1cenk2:slowring",
        "@cenk1cenk2:fastring"
      ]
    },
    "lockFile": {
      "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "commitMessageSuffix": "[skip ci]",
        "labels": [
          "renovate",
          "lock"
        ],
        "schedule": [
          "before 1am"
        ]
      }
    },
    "noTests": {
      "requiredStatusChecks": null
    },
    "slowring": {
      "packageRules": [
        {
          "matchPackagePatterns": [
            "^@typescript-eslint/",
            "jest",
            "@types/jest",
            "^@types/node$",
            "^eslint$",
            "^husky$",
            "^prettier$",
            "^lint-staged$",
            "^cz-conventional-changelog$",
            "^simple-git-hooks$"
          ],
          "groupName": "all slow ring @weekly",
          "groupSlug": "slow-ring-weekly",
          "schedule": [
            "before 1am on Monday"
          ],
          "matchManagers": [
            "npm"
          ]
        },
        {
          "matchPackageNames": [
            "node",
            "webpack"
          ],
          "enabled": false,
          "matchManagers": [
            "npm"
          ]
        }
      ]
    },
    "fastring": {
      "packageRules": [
        {
          "matchPackagePatterns": [
            "^@cenk1cenk2/",
            "listr2"
          ],
          "groupName": "all fast ring minor dependencies",
          "groupSlug": "fast-ring",
          "matchDepTypes": [
            "dependencies"
          ],
          "matchUpdateTypes": [
            "minor",
            "patch",
            "pin",
            "digest"
          ],
          "rangeStrategy": "bump",
          "labels": [
            "renovate",
            "minor",
            "automerge"
          ],
          "automerge": true,
          "matchManagers": [
            "npm"
          ],
          "schedule": [
            "at any time"
          ]
        },
        {
          "matchPackagePatterns": [
            "^gitlab.kilic.dev/"
          ],
          "groupName": "all fast ring minor dependencies",
          "groupSlug": "fast-ring",
          "matchUpdateTypes": [
            "minor",
            "patch",
            "digest"
          ],
          "labels": [
            "renovate",
            "minor",
            "automerge"
          ],
          "automerge": true,
          "matchManagers": [
            "gomod"
          ],
          "schedule": [
            "at any time"
          ]
        },
        {
          "matchPackagePatterns": [
            "^@cenk1cenk2/",
            "listr2"
          ],
          "groupName": "all fast ring dev dependencies",
          "groupSlug": "fast-ring-dev",
          "matchDepTypes": [
            "devDependencies"
          ],
          "rangeStrategy": "bump",
          "commitMessageSuffix": "[skip ci]",
          "labels": [
            "renovate",
            "dev-deps",
            "automerge"
          ],
          "automerge": true,
          "matchManagers": [
            "npm"
          ],
          "schedule": [
            "at any time"
          ]
        },
        {
          "matchPackagePatterns": [
            "^@cenk1cenk2/",
            "listr2"
          ],
          "groupName": "all fast ring peer dependencies",
          "groupSlug": "fast-ring-peer",
          "matchDepTypes": [
            "peerDependencies"
          ],
          "rangeStrategy": "widen",
          "commitMessageSuffix": "[skip ci]",
          "labels": [
            "renovate",
            "peer-deps",
            "automerge"
          ],
          "automerge": true,
          "matchManagers": [
            "npm"
          ],
          "schedule": [
            "at any time"
          ]
        }
      ]
    },
    "groupDevDependencies": {
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "groupName": "all development dependency updates",
          "groupSlug": "all-dev",
          "matchDepTypes": [
            "devDependencies"
          ],
          "rangeStrategy": "bump",
          "commitMessageSuffix": "[skip ci]",
          "labels": [
            "renovate",
            "dev-deps",
            "automerge"
          ],
          "automerge": true,
          "matchManagers": [
            "npm"
          ],
          "schedule": [
            "at any time"
          ]
        }
      ]
    },
    "groupMinorDependencies": {
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "groupName": "all minor dependency updates",
          "groupSlug": "all",
          "matchDepTypes": [
            "dependencies"
          ],
          "matchUpdateTypes": [
            "minor",
            "patch",
            "pin",
            "digest"
          ],
          "rangeStrategy": "bump",
          "labels": [
            "renovate",
            "minor",
            "automerge"
          ],
          "automerge": true,
          "matchManagers": [
            "npm"
          ],
          "schedule": [
            "before 1am"
          ]
        },
        {
          "packagePatterns": [
            "*"
          ],
          "groupName": "all minor dependency updates",
          "groupSlug": "all",
          "matchUpdateTypes": [
            "minor",
            "patch",
            "digest"
          ],
          "labels": [
            "renovate",
            "minor",
            "automerge"
          ],
          "automerge": true,
          "matchManagers": [
            "gomod"
          ],
          "schedule": [
            "before 1am"
          ]
        }
      ]
    },
    "groupPeerDependencies": {
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "groupName": "all peer dependency updates",
          "groupSlug": "all-peer",
          "matchDepTypes": [
            "peerDependencies"
          ],
          "rangeStrategy": "widen",
          "commitMessageSuffix": "[skip ci]",
          "labels": [
            "renovate",
            "peer-deps",
            "automerge"
          ],
          "automerge": true,
          "matchManagers": [
            "npm"
          ],
          "schedule": [
            "at any time"
          ]
        }
      ]
    },
    "branchDevelop": {
      "baseBranches": [
        "develop"
      ]
    },
    "branchBeta": {
      "baseBranches": [
        "beta"
      ]
    }
  }
}
