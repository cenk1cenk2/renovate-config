{
  "name": "@cenk1cenk2/renovate-config",
  "version": "2.3.148",
  "description": "Renovate configuration generator for repositories.",
  "author": "Cenk Kilic",
  "license": "GPL-3.0-or-later",
  "repository": "https://gitlab.kilic.dev/renovate/renovate-config",
  "type": "module",
  "bin": {
    "renovate-config-generator": "./bin/run.js"
  },
  "files": [
    "/config",
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "dev": "./bin/dev.js",
    "start": "./bin/run.js",
    "build": "tsup-node",
    "dev:start": "tsup-node --watch",
    "format": "prettier --log-level warn --write ./ && eslint --ext .ts,.js,.tsx,.jsx --fix ./",
    "lint": "eslint --ext .ts,.js,.tsx,.jsx ./",
    "manifest": "oclif manifest"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --log-level warn --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --log-level warn --write"
    ]
  },
  "oclif": {
    "bin": "renovate-config-generator",
    "dirname": "renovate-config-generator",
    "commands": "./dist/commands",
    "plugins": [],
    "hooks": {},
    "topicSeparator": " ",
    "default": "run"
  },
  "dependencies": {
    "@cenk1cenk2/oclif-common": "^6.3.16",
    "@listr2/manager": "^2.0.10",
    "@oclif/core": "^4.0.8",
    "fs-extra": "^11.2.0",
    "listr2": "^8.2.3",
    "renovate": "^37.426.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.7.9",
    "@cenk1cenk2/eslint-config": "^2.7.53",
    "@swc/core": "^1.6.13",
    "@types/config": "^3.3.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.10",
    "eslint": "^8.57.0",
    "execa": "^8.0.1",
    "globby": "^14.0.2",
    "lint-staged": "^15.2.7",
    "oclif": "^4.13.16",
    "prettier": "^3.3.2",
    "simple-git-hooks": "^2.11.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-replace-paths": "^0.0.14",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
