{
  "default": {
    "enabledManagers": ["npm", "gomod", "kubernetes", "terraform"],
    "extends": [
      "local>renovate/renovate-config:default/base",
      "local>renovate/renovate-config:default/lock-file",
      "local>renovate/renovate-config:default/no-tests",
      "local>renovate/renovate-config:default/node",
      "local>renovate/renovate-config:default/go",
      "local>renovate/renovate-config:default/kubernetes",
      "local>renovate/renovate-config:default/terraform"
    ]
  },
  "base": {
    "extends": ["config:recommended", ":configMigration", ":dependencyDashboard", ":dependencyDashboardApproval", ":masterIssue", ":disableRateLimiting"],
    "timezone": "Europe/Vienna",
    "semanticCommits": "enabled",
    "assignees": ["cenk1cenk2"],
    "labels": ["renovate"],
    "rangeStrategy": "bump",
    "major": {
      "stabilityDays": 3
    },
    "prCreation": "immediate"
  },
  "lock-file": {
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true,
      "commitMessageSuffix": "[skip ci]",
      "labels": ["renovate", "lock"],
      "schedule": ["before 1am"]
    }
  },
  "no-tests": {
    "requiredStatusChecks": null
  },
  "branch-develop": {
    "baseBranches": ["develop"]
  },
  "branch-beta": {
    "baseBranches": ["beta"]
  },
  "node": {
    "enabledManagers": ["npm"],
    "extends": [
      "local>renovate/renovate-config:default/node-no-ring",
      "local>renovate/renovate-config:default/node-slow-ring",
      "local>renovate/renovate-config:default/node-fast-ring",
      "local>renovate/renovate-config:default/node-group-dev-dependencies",
      "local>renovate/renovate-config:default/node-group-minor-dependencies",
      "local>renovate/renovate-config:default/node-group-peer-dependencies"
    ]
  },
  "node-no-ring": {
    "packageRules": [
      {
        "matchPackageNames": ["node"],
        "enabled": false,
        "matchManagers": ["npm"]
      },
      {
        "matchPackageNames": ["node", "npm", "pnpm", "yarn"],
        "matchManagers": ["npm"],
        "matchDepTypes": ["engines"],
        "enabled": false
      }
    ]
  },
  "node-slow-ring": {
    "packageRules": [
      {
        "matchPackagePatterns": [
          "^@typescript-eslint/",
          "jest",
          "@types/jest",
          "^@types/node$",
          "^eslint$",
          "^husky$",
          "^prettier$",
          "^lint-staged$",
          "^cz-conventional-changelog$",
          "^simple-git-hooks$"
        ],
        "groupName": "all slow ring @weekly",
        "groupSlug": "slow-ring-weekly",
        "schedule": ["before 1am on Monday"],
        "matchManagers": ["npm"]
      }
    ]
  },
  "node-fast-ring": {
    "packageRules": [
      {
        "matchPackagePatterns": ["^@cenk1cenk2/", "listr2", "^@cenk1cenk2-.*/", "^@kilic.dev/"],
        "groupName": "all fast ring minor dependencies",
        "groupSlug": "fast-ring",
        "matchDepTypes": ["dependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "rangeStrategy": "bump",
        "labels": ["renovate", "minor", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      },
      {
        "matchPackagePatterns": ["^@cenk1cenk2/", "listr2", "^@cenk1cenk2-.*/", "^@kilic.dev/"],
        "groupName": "all fast ring dev dependencies",
        "groupSlug": "fast-ring-dev",
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "rangeStrategy": "bump",
        "commitMessageSuffix": "[skip ci]",
        "labels": ["renovate", "dev-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      },
      {
        "matchPackagePatterns": ["^@cenk1cenk2/", "listr2", "^@cenk1cenk2-.*/", "^@kilic.dev/"],
        "groupName": "all fast ring peer dependencies",
        "groupSlug": "fast-ring-peer",
        "matchDepTypes": ["peerDependencies", "optionalDependencies"],
        "rangeStrategy": "widen",
        "commitMessageSuffix": "[skip ci]",
        "labels": ["renovate", "peer-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      }
    ]
  },
  "node-group-dev-dependencies": {
    "packageRules": [
      {
        "matchPackagePatterns": ["*"],
        "groupName": "all development dependency updates",
        "groupSlug": "all-dev",
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "rangeStrategy": "bump",
        "commitMessageSuffix": "[skip ci]",
        "labels": ["renovate", "dev-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      },
      {
        "matchPackageNames": ["typescript", "tsup", "tsdown", "prettier", "eslint", "@cenk1cenk2/eslint-config", "@swc/core", "@types/jest", "jest", "ts-jest"],
        "matchPackagePatterns": ["^eslint-plugin-", "^jest"],
        "groupName": "all build dependency updates",
        "groupSlug": "all-build",
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "rangeStrategy": "bump",
        "semanticCommitType": "build",
        "commitMessageSuffix": "",
        "labels": ["renovate", "build-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      },
      {
        "matchPackageNames": ["typedoc", "typedoc-plugin-markdown"],
        "matchPackagePatterns": ["^vitepress", "^markdown-it"],
        "groupName": "all docs dependency updates",
        "groupSlug": "all-docs",
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "rangeStrategy": "bump",
        "semanticCommitType": "docs",
        "commitMessageSuffix": "",
        "labels": ["renovate", "build-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      },
      {
        "groupName": "all package manager",
        "groupSlug": "all-package-manager",
        "matchManagers": ["npm"],
        "matchDepTypes": ["packageManager"],
        "rangeStrategy": "widen",
        "labels": ["renovate", "engines", "automerge"],
        "commitMessageSuffix": "[skip ci]",
        "autoMerge": true,
        "schedule": ["at any time"]
      }
    ]
  },
  "node-group-minor-dependencies": {
    "packageRules": [
      {
        "matchPackagePatterns": ["*"],
        "groupName": "all minor dependency updates",
        "groupSlug": "all",
        "matchDepTypes": ["dependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "rangeStrategy": "bump",
        "labels": ["renovate", "minor", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["before 1am"]
      }
    ]
  },
  "node-group-peer-dependencies": {
    "packageRules": [
      {
        "matchPackagePatterns": ["*"],
        "groupName": "all peer dependency updates",
        "groupSlug": "all-peer",
        "enabled": false,
        "matchDepTypes": ["peerDependencies", "optionalDependencies"],
        "rangeStrategy": "widen",
        "commitMessageSuffix": "[skip ci]",
        "labels": ["renovate", "peer-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      }
    ]
  },
  "go": {
    "enabledManagers": ["gomod"],
    "extends": [
      "local>renovate/renovate-config:default/go-slow-ring-packages",
      "local>renovate/renovate-config:default/go-fast-ring-packages",
      "local>renovate/renovate-config:default/go-group-minor-dependencies"
    ],
    "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"]
  },
  "go-group-minor-dependencies": {
    "packageRules": [
      {
        "matchPackagePatterns": ["*"],
        "groupName": "all minor dependency updates",
        "groupSlug": "all",
        "matchUpdateTypes": ["minor", "patch", "digest"],
        "labels": ["renovate", "minor", "automerge"],
        "automerge": true,
        "matchManagers": ["gomod"],
        "schedule": ["before 1am"]
      }
    ]
  },
  "go-slow-ring-packages": {
    "packageRules": [
      {
        "matchPackagePatterns": ["^golang.org/x/"],
        "groupName": "all slow ring @weekly",
        "groupSlug": "slow-ring-weekly",
        "schedule": ["before 1am on Monday"],
        "matchManagers": ["gomod"]
      }
    ]
  },
  "go-fast-ring-packages": {
    "packageRules": [
      {
        "matchPackagePatterns": ["^gitlab.kilic.dev/"],
        "groupName": "all fast ring minor dependencies",
        "groupSlug": "fast-ring",
        "matchUpdateTypes": ["minor", "patch", "digest"],
        "labels": ["renovate", "minor", "automerge"],
        "automerge": true,
        "matchManagers": ["gomod"],
        "schedule": ["at any time"]
      }
    ]
  },
  "kubernetes": {
    "enabledManagers": ["kubernetes"]
  },
  "terraform": {
    "enabledManagers": ["terraform"],
    "extends": ["local>renovate/renovate-config:default/terraform-minor-helm-releases", "local>renovate/renovate-config:default/terraform-group-minor-providers"]
  },
  "terraform-minor-helm-releases": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["minor", "patch"],
        "rangeStrategy": "auto",
        "labels": ["renovate", "minor"],
        "automerge": false,
        "extends": [":semanticCommitTypeAll(fix)"],
        "matchDepTypes": ["helm_release"],
        "matchManagers": ["terraform"],
        "schedule": ["at any time"]
      }
    ]
  },
  "terraform-group-minor-modules": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["minor", "patch"],
        "rangeStrategy": "auto",
        "labels": ["renovate", "minor"],
        "automerge": false,
        "extends": [":semanticCommitTypeAll(fix)"],
        "matchDepTypes": ["module"],
        "matchManagers": ["terraform"],
        "schedule": ["at any time"]
      }
    ]
  },
  "terraform-group-minor-providers": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["minor", "patch"],
        "rangeStrategy": "auto",
        "labels": ["renovate", "minor"],
        "automerge": false,
        "extends": [":semanticCommitTypeAll(fix)"],
        "matchDepTypes": ["provider", "required_provider"],
        "matchManagers": ["terraform"],
        "schedule": ["at any time"]
      }
    ]
  }
}
