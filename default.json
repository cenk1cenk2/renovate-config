{
  "default": {
    "enabledManagers": [
      "ansible-galaxy",
      "argocd",
      "dockerfile",
      "gitlabci",
      "gitlabci-include",
      "gomod",
      "helmv3",
      "helm-values",
      "kubernetes",
      "kustomize",
      "npm",
      "ocb",
      "pep621",
      "custom.regex",
      "cargo",
      "terraform"
    ],
    "extends": [
      "local>renovate/renovate-config:default/base",
      "local>renovate/renovate-config:default/lock-file",
      "local>renovate/renovate-config:default/no-tests",
      "local>renovate/renovate-config:default/ansible-galaxy",
      "local>renovate/renovate-config:default/argocd",
      "local>renovate/renovate-config:default/dockerfile",
      "local>renovate/renovate-config:default/gitlab-ci",
      "local>renovate/renovate-config:default/go",
      "local>renovate/renovate-config:default/helm",
      "local>renovate/renovate-config:default/kubernetes",
      "local>renovate/renovate-config:default/kustomize",
      "local>renovate/renovate-config:default/node",
      "local>renovate/renovate-config:default/opentelemetry-collector-builder",
      "local>renovate/renovate-config:default/python",
      "local>renovate/renovate-config:default/rust",
      "local>renovate/renovate-config:default/terraform",
      "local>renovate/renovate-config:default/datasource-docker"
    ]
  },
  "base": {
    "extends": ["config:recommended", ":configMigration", ":dependencyDashboard", ":disableRateLimiting", ":updateNotScheduled", ":enableVulnerabilityAlerts"],
    "timezone": "Europe/Vienna",
    "semanticCommits": "enabled",
    "reviewers": ["cenk1cenk2"],
    "labels": ["renovate"],
    "major": {
      "minimumReleaseAge": "3 days"
    },
    "minimumReleaseAgeBehaviour": "timestamp-optional",
    "prCreation": "immediate"
  },
  "lock-file": {
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true,
      "commitMessageSuffix": "[skip ci]",
      "labels": ["renovate", "lock"],
      "schedule": ["before 1am"]
    }
  },
  "no-tests": {
    "ignoreTests": true
  },
  "branch-develop": {
    "baseBranchPatterns": ["develop"]
  },
  "branch-beta": {
    "baseBranchPatterns": ["beta"]
  },
  "node": {
    "enabledManagers": ["npm"],
    "extends": [
      "local>renovate/renovate-config:default/node-no-ring",
      "local>renovate/renovate-config:default/node-slow-ring",
      "local>renovate/renovate-config:default/node-fast-ring",
      "local>renovate/renovate-config:default/node-group-dev-dependencies",
      "local>renovate/renovate-config:default/node-group-minor-dependencies",
      "local>renovate/renovate-config:default/node-group-peer-dependencies"
    ],
    "packageRules": [
      {
        "matchManagers": ["npm"],
        "addLabels": ["node"]
      }
    ]
  },
  "node-no-ring": {
    "packageRules": [
      {
        "matchPackageNames": ["node"],
        "enabled": false,
        "matchManagers": ["npm"]
      },
      {
        "matchPackageNames": ["node", "npm", "pnpm", "yarn"],
        "matchManagers": ["npm"],
        "matchDepTypes": ["engines"],
        "enabled": false
      }
    ]
  },
  "node-slow-ring": {
    "packageRules": [
      {
        "matchPackageNames": [
          "/^@typescript-eslint//",
          "/jest/",
          "/@types/jest/",
          "/^@types/node$/",
          "/^eslint$/",
          "/^husky$/",
          "/^prettier$/",
          "/^lint-staged$/",
          "/^cz-conventional-changelog$/",
          "/^simple-git-hooks$/"
        ],
        "groupName": "node slow ring",
        "groupSlug": "slow-ring-weekly",
        "schedule": ["before 1am on Monday"],
        "matchManagers": ["npm"]
      }
    ]
  },
  "node-fast-ring": {
    "packageRules": [
      {
        "matchPackageNames": ["/^@cenk1cenk2//", "/listr2/", "/^@cenk1cenk2-.*//", "/^@kilic.dev//"],
        "groupName": "node fast ring minor dependencies",
        "groupSlug": "fast-ring",
        "matchDepTypes": ["dependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "labels": ["renovate", "minor", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      },
      {
        "matchPackageNames": ["/^@cenk1cenk2//", "/listr2/", "/^@cenk1cenk2-.*//", "/^@kilic.dev//"],
        "groupName": "node fast ring dev dependencies",
        "groupSlug": "fast-ring-dev",
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "commitMessageSuffix": "[skip ci]",
        "labels": ["renovate", "dev-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      },
      {
        "matchPackageNames": ["/^@cenk1cenk2//", "/listr2/", "/^@cenk1cenk2-.*//", "/^@kilic.dev//"],
        "groupName": "node fast ring peer dependencies",
        "groupSlug": "fast-ring-peer",
        "matchDepTypes": ["peerDependencies", "optionalDependencies"],
        "rangeStrategy": "widen",
        "commitMessageSuffix": "[skip ci]",
        "labels": ["renovate", "peer-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      }
    ]
  },
  "node-group-dev-dependencies": {
    "packageRules": [
      {
        "matchPackageNames": ["*"],
        "groupName": "node all development dependency updates",
        "groupSlug": "node-dev",
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "commitMessageSuffix": "[skip ci]",
        "labels": ["renovate", "dev-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      },
      {
        "matchPackageNames": [
          "typescript",
          "tsup",
          "tsdown",
          "prettier",
          "eslint",
          "@cenk1cenk2/eslint-config",
          "@swc/core",
          "@types/jest",
          "jest",
          "ts-jest",
          "/^eslint-plugin-/",
          "/^jest/"
        ],
        "groupName": "node all build dependency updates",
        "groupSlug": "node-build",
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "semanticCommitType": "build",
        "commitMessageSuffix": "",
        "labels": ["renovate", "build-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      },
      {
        "matchPackageNames": ["typedoc", "typedoc-plugin-markdown", "/^vitepress/", "/^markdown-it/"],
        "groupName": "node all docs dependency updates",
        "groupSlug": "node-docs",
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "semanticCommitType": "docs",
        "commitMessageSuffix": "",
        "labels": ["renovate", "build-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      },
      {
        "groupName": "node all package manager",
        "groupSlug": "node-package-manager",
        "matchManagers": ["npm"],
        "rangeStrategy": "widen",
        "matchDepNames": ["pnpm", "yarn", "npm", "bun"],
        "labels": ["renovate", "engines", "automerge"],
        "commitMessageSuffix": "[skip ci]",
        "automerge": true,
        "schedule": ["at any time"]
      },
      {
        "matchManagers": ["npm"],
        "matchDepTypes": ["devDependencies"],
        "rangeStrategy": "bump"
      }
    ]
  },
  "node-group-minor-dependencies": {
    "packageRules": [
      {
        "matchPackageNames": ["*"],
        "groupName": "node all minor dependency updates",
        "groupSlug": "node-minor",
        "matchDepTypes": ["dependencies"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "labels": ["renovate", "minor", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["before 1am"]
      },
      {
        "matchManagers": ["npm"],
        "matchDepTypes": ["dependencies"],
        "rangeStrategy": "bump"
      }
    ]
  },
  "node-group-peer-dependencies": {
    "packageRules": [
      {
        "matchPackageNames": ["*"],
        "groupName": "node all peer dependency updates",
        "groupSlug": "node-peer",
        "enabled": false,
        "matchDepTypes": ["peerDependencies", "optionalDependencies"],
        "rangeStrategy": "widen",
        "commitMessageSuffix": "[skip ci]",
        "labels": ["renovate", "peer-deps", "automerge"],
        "automerge": true,
        "matchManagers": ["npm"],
        "schedule": ["at any time"]
      }
    ]
  },
  "go": {
    "enabledManagers": ["gomod"],
    "extends": [
      "local>renovate/renovate-config:default/go-slow-ring-packages",
      "local>renovate/renovate-config:default/go-fast-ring-packages",
      "local>renovate/renovate-config:default/go-group-minor-dependencies"
    ],
    "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
    "packageRules": [
      {
        "matchManagers": ["gomod"],
        "addLabels": ["go"]
      }
    ]
  },
  "go-group-minor-dependencies": {
    "packageRules": [
      {
        "matchPackageNames": ["*"],
        "groupName": "go all minor dependency updates",
        "groupSlug": "go-minor",
        "matchUpdateTypes": ["minor", "patch", "digest"],
        "labels": ["renovate", "minor", "automerge"],
        "automerge": true,
        "matchManagers": ["gomod"],
        "schedule": ["before 1am"]
      }
    ]
  },
  "go-slow-ring-packages": {
    "packageRules": [
      {
        "matchPackageNames": ["/^golang.org/x//"],
        "groupName": "go slow ring",
        "groupSlug": "slow-ring-weekly",
        "schedule": ["before 1am on Monday"],
        "matchManagers": ["gomod"]
      }
    ]
  },
  "go-fast-ring-packages": {
    "packageRules": [
      {
        "matchPackageNames": ["/^gitlab.kilic.dev//"],
        "groupName": "go fast ring minor dependencies",
        "groupSlug": "fast-ring",
        "matchUpdateTypes": ["minor", "patch", "digest"],
        "labels": ["renovate", "minor", "automerge"],
        "automerge": true,
        "matchManagers": ["gomod"],
        "schedule": ["at any time"]
      }
    ]
  },
  "python": {
    "enabledManagers": ["pep621"],
    "packageRules": [
      {
        "matchManagers": ["pep621"],
        "addLabels": ["python"]
      }
    ]
  },
  "rust": {
    "enabledManagers": ["cargo"],
    "packageRules": [
      {
        "matchManagers": ["cargo"],
        "addLabels": ["rust"]
      }
    ]
  },
  "kubernetes": {
    "enabledManagers": ["kubernetes"],
    "kubernetes": {
      "managerFilePatterns": [
        "/\\.deploy\\/.*\\/.*\\.ya?ml/",
        "/!(^\\.deploy\\/.*\\/kustomization\\.ya?ml$)/",
        "/!(^\\.deploy\\/.*\\/templates\\/)/",
        "/!(^\\.deploy\\/.*\\/files\\/)/",
        "/!(^\\.deploy\\/.*\\/values\\/)/",
        "/!(^\\.deploy\\/.*\\/values\\.ya?ml$)/",
        "/!(^\\.deploy\\/.*\\/chart\\.ya?ml$)/"
      ]
    },
    "packageRules": [
      {
        "matchManagers": ["kubernetes"],
        "addLabels": ["kubernetes"]
      }
    ]
  },
  "kustomize": {
    "enabledManagers": ["kustomize"],
    "extends": ["local>renovate/renovate-config:default/kustomize-minor-helm-releases", "local>renovate/renovate-config:default/kustomize-major-helm-releases"],
    "packageRules": [
      {
        "matchManagers": ["kustomize"],
        "addLabels": ["kustomize"]
      }
    ]
  },
  "kustomize-minor-helm-releases": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["minor", "patch"],
        "labels": ["renovate", "minor"],
        "groupSlug": "kustomize-",
        "automerge": false,
        "extends": [":semanticCommitTypeAll(fix)"],
        "matchDepTypes": ["HelmChart"],
        "matchManagers": ["kustomize"],
        "schedule": ["at any time"]
      },
      {
        "enabled": true,
        "matchUpdateTypes": ["major", "minor", "patch"],
        "labels": ["renovate", "minor", "infrastructure", "automerge"],
        "groupName": "helm all minor automerge dependency updates for kustomize",
        "groupSlug": "kustomize-minor-",
        "automerge": true,
        "extends": [":semanticCommitTypeAll(feat)"],
        "matchDepTypes": ["HelmChart"],
        "matchManagers": ["kustomize"],
        "schedule": ["at any time"],
        "matchSourceUrls": ["https://github.com/prometheus-community/helm-charts"],
        "matchPackageNames": ["blackbox-exporter"]
      }
    ]
  },
  "kustomize-major-helm-releases": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["major"],
        "labels": ["renovate", "major", "infrastructure"],
        "additionalBranchPrefix": "kustomize-",
        "automerge": false,
        "extends": [":semanticCommitTypeAll(perf)"],
        "matchDepTypes": ["HelmChart"],
        "matchManagers": ["kustomize"],
        "schedule": ["at any time"]
      }
    ]
  },
  "helm": {
    "enabledManagers": ["helmv3", "helm-values"],
    "postUpdateOptions": ["helmUpdateSubChartArchives"],
    "extends": ["local>renovate/renovate-config:default/helm-group-minor", "local>renovate/renovate-config:default/helm-group-major"],
    "packageRules": [
      {
        "matchManagers": ["helmv3", "helm-values"],
        "addLabels": ["helm"]
      }
    ]
  },
  "helm-group-minor": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["minor", "patch"],
        "labels": ["renovate", "minor", "infrastructure"],
        "groupName": "helm all minor dependency updates for {{ packageFileDir }}",
        "groupSlug": "helm-minor-{{ packageFileDir }}",
        "automerge": false,
        "extends": [":semanticCommitTypeAll(feat)"],
        "matchManagers": ["helmv3"],
        "schedule": ["at any time"]
      },
      {
        "enabled": true,
        "matchUpdateTypes": ["major", "minor", "patch"],
        "labels": ["renovate", "minor", "infrastructure", "automerge"],
        "groupName": "helm all minor automerge dependency updates",
        "groupSlug": "helm-minor-",
        "automerge": true,
        "extends": [":semanticCommitTypeAll(feat)"],
        "matchManagers": ["helmv3"],
        "schedule": ["at any time"],
        "matchSourceUrls": ["https://github.com/prometheus-community/helm-charts", "https://github.com/open-telemetry/opentelemetry-helm-charts"],
        "matchPackageNames": ["kube-prometheus-stack", "blackbox-exporter", "opentelemetry-operator"]
      }
    ]
  },
  "helm-group-major": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["major"],
        "labels": ["renovate", "major", "infrastructure"],
        "automerge": false,
        "extends": [":semanticCommitTypeAll(perf)"],
        "matchManagers": ["helmv3"],
        "schedule": ["at any time"]
      }
    ]
  },
  "terraform": {
    "enabledManagers": ["terraform", "custom.regex"],
    "extends": [
      "local>renovate/renovate-config:default/terraform-custom-manager",
      "local>renovate/renovate-config:default/terraform-minor-helm-releases",
      "local>renovate/renovate-config:default/terraform-group-minor-providers",
      "local>renovate/renovate-config:default/terraform-group-minor-modules",
      "local>renovate/renovate-config:default/terraform-group-major"
    ],
    "packageRules": [
      {
        "matchManagers": ["terraform"],
        "addLabels": ["terraform"]
      },
      {
        "matchManagers": ["custom.regex"],
        "matchDepTypes": ["terraform-manager-git-monorepo"],
        "addLabels": ["terraform"]
      }
    ]
  },
  "terraform-custom-manager": {
    "customManagers": [
      {
        "depTypeTemplate": "terraform-manager-git-monorepo",
        "customType": "regex",
        "managerFilePatterns": ["/\\.tf$/"],
        "matchStringsStrategy": "any",
        "matchStrings": ["\"git::git@(?<registryUrl>[^:]+):(?<packageName>[^.]+)(\\.git)?\\/\\/.*\\?ref=(?<depName>.+)@(?<currentValue>[^\"]+)\""],
        "extractVersionTemplate": "^{{{depName}}}@(?<version>.*)$",
        "registryUrlTemplate": "https://{{{registryUrl}}}",
        "datasourceTemplate": "gitlab-tags",
        "versioningTemplate": "semver"
      }
    ]
  },
  "terraform-minor-helm-releases": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["minor", "patch"],
        "labels": ["renovate", "minor", "infrastructure"],
        "additionalBranchPrefix": "terraform-",
        "automerge": false,
        "extends": [":semanticCommitTypeAll(fix)"],
        "matchDepTypes": ["helm_release"],
        "matchManagers": ["terraform"],
        "schedule": ["at any time"]
      }
    ]
  },
  "terraform-group-minor-modules": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["minor", "patch"],
        "labels": ["renovate", "minor", "infrastructure"],
        "additionalBranchPrefix": "terraform-module-",
        "automerge": false,
        "extends": [":semanticCommitTypeAll(fix)"],
        "matchDepTypes": ["module"],
        "matchManagers": ["terraform"],
        "schedule": ["at any time"]
      },
      {
        "enabled": false,
        "matchDepTypes": ["module"],
        "matchManagers": ["terraform"],
        "registryUrls": ["gitlab.kilic.dev"]
      },
      {
        "enabled": true,
        "matchUpdateTypes": ["minor", "patch"],
        "labels": ["renovate", "minor", "infrastructure"],
        "groupName": "terraform-monorepo all minor dependency updates",
        "groupSlug": "terraform-monorepo",
        "automerge": false,
        "extends": [":semanticCommitTypeAll(feat)"],
        "matchDepTypes": ["terraform-manager-git-monorepo"],
        "matchManagers": ["custom.regex"],
        "schedule": ["at any time"]
      },
      {
        "matchManagers": ["custom.regex"],
        "matchDepTypes": ["terraform-manager-git-monorepo"],
        "registryUrls": ["gitlab.kilic.dev"]
      }
    ]
  },
  "terraform-group-minor-providers": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["minor", "patch"],
        "labels": ["renovate", "minor", "infrastructure"],
        "additionalBranchPrefix": "terraform-",
        "automerge": false,
        "extends": [":semanticCommitTypeAll(fix)"],
        "matchDepTypes": ["provider"],
        "matchManagers": ["terraform"],
        "schedule": ["at any time"]
      },
      {
        "enabled": true,
        "matchUpdateTypes": ["minor", "patch"],
        "labels": ["renovate", "minor", "infrastructure"],
        "additionalBranchPrefix": "terraform-",
        "automerge": false,
        "extends": [":semanticCommitTypeAll(fix)"],
        "matchDepTypes": ["required_provider"],
        "matchManagers": ["terraform"],
        "schedule": ["at any time"]
      },
      {
        "matchManagers": ["terraform"],
        "matchDepTypes": ["required_provider"],
        "rangeStrategy": "replace"
      }
    ]
  },
  "terraform-group-major": {
    "packageRules": [
      {
        "enabled": true,
        "matchUpdateTypes": ["major"],
        "labels": ["renovate", "major", "infrastructure"],
        "additionalBranchPrefix": "terraform-",
        "automerge": false,
        "extends": [":semanticCommitTypeAll(perf)"],
        "matchDepTypes": ["helm_release", "provider", "required_provider", "module"],
        "matchManagers": ["terraform"],
        "schedule": ["at any time"]
      },
      {
        "enabled": true,
        "matchUpdateTypes": ["major"],
        "labels": ["renovate", "major", "infrastructure"],
        "additionalBranchPrefix": "terraform-monorepo-",
        "automerge": false,
        "extends": [":semanticCommitTypeAll(perf)"],
        "matchDepTypes": ["terraform-manager-git-monorepo"],
        "matchManagers": ["custom.regex"],
        "schedule": ["at any time"]
      },
      {
        "matchManagers": ["custom.regex"],
        "matchDepTypes": ["terraform-manager-git-monorepo"],
        "registryUrls": ["gitlab.kilic.dev"]
      }
    ]
  },
  "ansible-galaxy": {
    "enabledManagers": ["ansible-galaxy"],
    "extends": ["local>renovate/renovate-config:default/ansible-galaxy-group-minor-roles"],
    "packageRules": [
      {
        "matchManagers": ["ansible-galaxy"],
        "addLabels": ["ansible"]
      }
    ]
  },
  "ansible-galaxy-group-minor-roles": {
    "packageRules": [
      {
        "matchPackageNames": ["*"],
        "groupName": "ansible-galaxy all minor dependency updates",
        "groupSlug": "ansible-galaxy-minor",
        "labels": ["renovate", "minor", "automerge"],
        "automerge": true,
        "matchDepTypes": ["collections", "roles"],
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "commitMessageSuffix": "[skip ci]",
        "matchManagers": ["ansible-galaxy"],
        "schedule": ["before 1am"]
      },
      {
        "matchManagers": ["ansible-galaxy"],
        "matchDepTypes": ["collections", "roles"],
        "rangeStrategy": "bump"
      }
    ]
  },
  "dockerfile": {
    "enabledManagers": ["dockerfile"],
    "packageRules": [
      {
        "matchManagers": ["dockerfile"],
        "addLabels": ["dockerfile"]
      }
    ]
  },
  "gitlab-ci": {
    "enabledManagers": ["gitlabci-include", "gitlabci", "custom.regex"],
    "extends": ["local>renovate/renovate-config:default/gitlab-ci-custom-manager", "local>renovate/renovate-config:default/gitlab-ci-minor-updates"],
    "packageRules": [
      {
        "matchManagers": ["gitlabci-include", "gitlabci"],
        "addLabels": ["gitlab-ci"]
      },
      {
        "matchManagers": ["custom.regex"],
        "matchDepTypes": ["gitlab-ci-manager-git-monorepo"],
        "addLabels": ["gitlab-ci"]
      }
    ]
  },
  "gitlab-ci-custom-manager": {
    "customManagers": [
      {
        "depTypeTemplate": "gitlab-ci-manager-git-monorepo",
        "customType": "regex",
        "managerFilePatterns": ["/\\.gitlab-ci\\.ya?ml$/", "/\\.gitlab-ci\\..*\\.ya?ml$/"],
        "matchStringsStrategy": "any",
        "matchStrings": ["project:\\s+['\"]?(?<packageName>[^'\"\\s]+)['\"]?\\s*ref:\\s+['\"]?(?<depName>[^@]+)@(?<currentValue>[^'\"\\s]+)['\"]?"],
        "registryUrlTemplate": "https://gitlab.kilic.dev/",
        "extractVersionTemplate": "^{{{depName}}}@(?<version>.*)$",
        "datasourceTemplate": "gitlab-tags",
        "versioningTemplate": "semver"
      }
    ]
  },
  "gitlab-ci-minor-updates": {
    "packageRules": [
      {
        "matchPackageNames": ["*"],
        "groupName": "gitlab-ci all minor dependency updates",
        "groupSlug": "gitlab-ci-minor",
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "labels": ["renovate", "minor", "automerge", "pipelines"],
        "automerge": true,
