{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "paths": {
      "@constants/*": ["./constants/*"],
      "@lib/*": ["./lib/*"],
      "@utils/*": ["./utils/*"],
      "@presets/*": ["./presets/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
